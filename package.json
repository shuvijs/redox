{
  "name": "redox",
  "private": true,
  "description": "The root package for redox",
  "homepage": "https://shuvijs.github.io/shuvijs.org",
  "bugs": {
    "url": "https://github.com/shuvijs/redox/issues"
  },
  "keywords": [
    "@shuvi",
    "redox",
    "state management",
    "javascript",
    "typescript"
  ],
  "license": "MIT",
  "authors": [],
  "contributors": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shuvijs/redox.git"
  },
  "packageManager": "pnpm@7.1.5",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "pnpm -r --filter \"./packages/**\" --stream --parallel run dev",
    "build": "pnpm -r --filter \"./packages/**\" run build",
    "clean": "pnpm -r --parallel exec rm -rf node_modules dist && pnpm exec rm -rf node_modules",
    "test": "jest",
    "release": "pnpm clean && pnpm i && pnpm build && pnpm test && pnpm changeset publish",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@changesets/cli": "^2.21.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/jest": "^27.0.1",
    "@types/node": "^13.11.0",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "jest": "27.5.1",
    "lint-staged": "^11.1.2",
    "prettier": "2.3.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-jest": "27.1.4",
    "tslib": "^2.3.1",
    "typescript": "^4.7.4"
  },
  "resolutions": {
    "jest-environment-jsdom": "27.5.1",
    "@types/eslint": "^8.4.3"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
