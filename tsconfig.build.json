{
	"compilerOptions": {
		"jsx": "react",
		"module": "esnext",
		"lib": ["dom", "esnext"],
		"importHelpers": true,
		"declaration": true,
		"declarationMap": true,
		"downlevelIteration": true,
		"sourceMap": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"removeComments": true,
		"noEmit": true
	},
	"include": ["packages/*/src", "packages/plugins/*/src", "packages/*/__tests__"],
	"exclude": ["node_modules"]
}
